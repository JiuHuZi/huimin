/* pages/mine/login.wxss */
.login {
	width: 100vw;
	height: 100vh;
	background-color: #fff;
	display: flex;
	/* justify-content: center; */
	align-items: center;
	flex-direction: column;
}

image {
	width: 200px;
	height: 200px;
	/* border: 1px solid #ccc; */
	box-shadow: 0 0 20px #ccc;
	border-radius: 50%;
	margin-top: 50px;
}

.title {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin: 50px 0;
}

.title text:first-child {
	font-weight: bold;
	font-size: 20px;
	margin-bottom: 20px;
}

.title text:last-child {
	color: #999;
}

.btn {
	width: 100%;
	height: 45px;
	display: flex;
	justify-content: space-around;
	align-items: center;
}

.btn .phone {
	width: 40%;
	line-height: 45px;
	text-align: center;
	color: #fff;
	background-color: #fa4f51;
	border-radius: 20px;
}

.btn .wechat {
	width: 40%;
	line-height: 45px;
	text-align: center;
	color: #fff;
	background-color: #6cae0c;
	border-radius: 20px;
}