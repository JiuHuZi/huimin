/* pages/search/index.wxss */
@import "../../common/icon.wxss";

.search {
	width: 100vw;
	height: 100vh;
	background-color: #fff;
	display: flex;
	flex-direction: column;
}

.searchInput {
	display: flex;
	justify-content: space-around;
	align-items: center;
}

.searchInput .input {
	position: relative;
	display: flex;
	justify-content: center;
	align-items: center;
}

.searchInput .input i {
	color: #000;
	position: absolute;
	left: 10px;
	font-size: 20px;
}

.searchInput input {
	background-color: #eee;
	width: 70vw;
	height: 40px;
	border-radius: 15px;
	padding-left: 40px;
	font-size: 14px;

}

.searchInput text {
	font-weight: bold;
}

.history {
	display: flex;
	flex-direction: column;
	padding: 15px;
}

.history text {
	font-weight: bold;
	margin-bottom: 10px;
}

.history ul {
	display: flex;
	flex-wrap: wrap;
}

.history ul li {
	background-color: #eee;
	margin-right: 15px;
	margin-bottom: 15px;
	padding: 5px 20px;
	border-radius: 15px;
	font-size: 14px;
}