/* pages/category/index.wxss */
@import "../../common/icon.wxss";

.classify {
	width: 100vw;
	height: 100vh;
	background-color: #fff;
	display: flex;
	flex-direction: column;
	overflow: hidden;
}

.searchInput {
	width: 100%;
	display: flex;
	justify-content: space-around;
	align-items: center;
	position: fixed;
	top: 0;
}

.searchInput .input {
	position: relative;
	display: flex;
	justify-content: center;
	align-items: center;
}

.searchInput .input i {
	color: #000;
	position: absolute;
	left: 10px;
	font-size: 20px;
}

.searchInput input {
	background-color: #eee;
	width: 80vw;
	height: 40px;
	border-radius: 15px;
	padding-left: 40px;
	font-size: 14px;

}

.navContent {
	margin-top: 40px;
	overflow: hidden;
	display: flex;
}

.navContent .left-nav,
.navContent .right-list {
	overflow: scroll;
}

.navContent .left-nav {
	width: 30%;
	border-right: 1px solid #ccc;
}

.navContent .left-nav ul li {
	height: 40px;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 5px 5px;
	font-size: 14px;
}


.navContent .left-nav ul li .active {
	background-color: red;
	color: #fff;
	padding: 5px 15px;
	border-radius: 15px;
}

.navContent .right-list {
	width: 70%;
}

.navContent .right-list ul {
	width: 95%;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-wrap: wrap;
}

.navContent .right-list ul li {
	width: 100%;
	height: 250px;
	border-radius: 15px;
	overflow: hidden;
	box-shadow: 0px 0px 5px #bbb;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin: 10px 0;
}

.navContent .right-list ul li image {
	width: 95%;
	height: 150px;
	border-radius: 5px;
	margin-top: 10px;
}

.navContent .right-list ul li view {
	display: flex;
	text-align: left;
	width: 95%;
}

.navContent .right-list ul li .content {
	flex-direction: column;
}

.navContent .right-list ul li .content text {
	font-weight: bold;
	font-size: 18px;
	padding: 5px 0;
}

.navContent .right-list ul li .content span {
	font-size: 14px;
}

.navContent .right-list ul li .price {
	justify-content: space-between;
	align-items: center;
	padding: 10px 0;
}

.navContent .right-list ul li .price .goods-price {
	display: flex;
	align-items: baseline;
}

.navContent .right-list ul li .price .goods-price i,
.navContent .right-list ul li .price .goods-price .goods-money {
	color: red;
	font-weight: bold;
}

.navContent .right-list ul li .price .cart {
	width: 100px;
	line-height: 30px;
	background-color: red;
	border-radius: 15px;
	color: #fff;
	font-size: 12px;
	display: flex;
	justify-content: center;
}

.navContent .right-list ul li .price .sold {
	font-size: 14px;
	color: #999;
	margin-left: 5px;
}