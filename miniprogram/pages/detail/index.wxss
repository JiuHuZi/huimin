.detail {
	width: 100vw;
	height: 100vh;
}

.detail .headerNav {
	width: 100%;
	height: 45px;
	background-color: #fff;
}

.detail .headerNav ul {
	display: flex;
	justify-content: space-around;
	align-items: center;
}

.detail .headerNav ul li {
	padding: 10px 0;
	position: relative;
}

.detail .headerNav ul .active {
	color: red;
}

.detail .headerNav ul .active::after {
	content: '';
	width: 40px;
	height: 3px;
	background-color: red;
	position: absolute;
	bottom: 2px;
	left: 20%;
}

.detail .swiper {
	width: 100%;
	height: 400px;
}

.detail .swiper swiper {
	height: 100%;
	width: 100%;
}

.detail .swiper swiper image {
	width: 100%;
	height: 100%;
}

.detail .price-main {
	width: 100%;
	height: 80px;
	background-color: red;
	color: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.detail .price-main .price {
	margin-left: 40px;
	font-weight: bold;
}

.detail .price-main .price em {
	font-size: 30px;
}

.detail .price-main .time-main {
	margin-right: 20px;
	font-size: 16px;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.detail .price-main .time-main .time {
	width: 100%;
	padding: 5px 10px;
	margin-top: 5px;
	font-weight: bold;
	text-align: center;
	background-color: #fff;
	color: red;
	border-radius: 15px;
}

.detail .title-main {
	width: 100%;
	background-color: #fff;
}

.detail .title-main .title {
	padding: 15px 10px 10px;
	font-size: 18px;
	font-weight: bold;
}

.detail .title-main .order-content {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 5px 10px 10px;
}

.detail .title-main .order-content .count {
	width: 100px;
	display: flex;
	justify-content: space-around;
	align-items: center;
}

.detail .title-main .order-content .count i {
	font-size: 24px;
}

.detail .title-main .order-content .count i:last-child {
	color: red;
}

.detail .detail-main {
	width: 100%;
	margin-top: 10px;
	background-color: #fff;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.detail .detail-main .introduce {
	text-align: center;
	padding: 10px 0;
	position: relative;
}

.detail .detail-main .introduce::after {
	content: '';
	position: absolute;
	top: 50%;
	left: calc(50% - 100px - 50px);
	width: 100px;
	height: 1px;
	background-color: #ccc;
}

.detail .detail-main .introduce::before {
	content: '';
	position: absolute;
	top: 50%;
	right: calc(50% - 100px - 50px);
	width: 100px;
	height: 1px;
	background-color: #ccc;
}

.detail .detail-main .goods-introduce {
	width: 90%;
	background-color: pink;
	border-radius: 10px;
	margin-top: 10px;
	margin-bottom: 10px;
}

.detail .detail-main .goods-introduce ul {
	display: flex;
	flex-direction: column;
	padding: 10px;
}

.detail .detail-main .goods-introduce ul li {
	padding: 5px 10px;
	font-size: 14px;
	display: flex;
	align-items: center;
}

.detail .detail-main .goods-introduce ul li span:first-child {
	flex: 1.5;
}

.detail .detail-main .goods-introduce ul li span:last-child {
	flex: 4;
}

.detail .detail-main .goods-msg {
	width: 90%;
	margin-bottom: 10px;
}

.detail .detail-main .detail-img {
	width: 100vw;
	margin-bottom: 60px;
}

.detail .detail-main .detail-img ul {
	width: 100%;
}

.detail .detail-main .detail-img ul li {
	width: 100%;
}

.detail .detail-main .detail-img ul li image {
	width: 100%;
}

.detail .pay {
	width: 100%;
	height: 50px;
	background-color: #fff;
	position: fixed;
	bottom: 0;
	display: flex;
	align-items: center;
}

.detail .pay .left-btn {
	flex: 1.5;
	display: flex;
	justify-content: center;
	font-weight: bold;
}

.detail .pay .left-btn view {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	text-align: center;
}

.detail .pay .left-btn view i {
	font-size: 18px;
}

.detail .pay .left-btn view span {
	font-size: 12px;
}

.detail .pay .right-btn {
	flex: 3;
	display: flex;
	justify-content: center;
	align-items: center;
}

.detail .pay .right-btn view {
	color: #fff;
	font-weight: bold;
	padding: 10px 25px;
	border-radius: 20px;
	margin-left: 10px;
}

.detail .pay .right-btn .cart {
	background-color: orange;
}

.detail .pay .right-btn .paybtn {
	background-color: red;
}